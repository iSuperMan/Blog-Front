{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-underscore-dangle": ['error', { "allow": ["_id"] }],
    "no-tabs": 0,
    "indent": ["error", "tab"],
    "react/jsx-indent": [0, "tab"],
    "react/jsx-indent-props": [0, "tab"],
    "react/require-default-props": 0
  },
  "ecmaFeatures": {
    "jsx": true
  },
}
